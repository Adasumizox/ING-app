<?xml version="1.0" encoding="utf-8"?>
<navigation
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/fragment_post">

    <fragment
        android:id="@+id/fragment_post"
        android:name="com.example.ing_app.ui.posts.PostFragment"
        android:label="fragment_post"
        tools:layout="@layout/fragment_post">
        <action
            android:id="@+id/posts_to_username"
            app:destination="@id/fragment_user">
        </action>
        <action
            android:id="@+id/posts_to_comments"
            app:destination="@id/fragment_comment" />
        <action
            android:id="@+id/post_to_connection_error"
            app:destination="@id/fragment_connection_error" />
    </fragment>

    <fragment
        android:id="@+id/fragment_user"
        android:name="com.example.ing_app.ui.user.UserFragment"
        android:label="fragment_user"
        tools:layout="@layout/fragment_user">
        <argument
            android:name="id"
            app:argType="integer"
            android:defaultValue="1"
            />
        <action
            android:id="@+id/user_to_images"
            app:destination="@id/fragment_images" />
        <action
            android:id="@+id/user_to_posts"
            app:destination="@id/fragment_post"
            app:launchSingleTop="false"
            app:popUpTo="@+id/fragment_post"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/fragment_comment"
        android:name="com.example.ing_app.ui.comments.CommentFragment"
        android:label="fragment_comments"
        tools:layout="@layout/fragment_comments">
        <argument
            android:name="id"
            app:argType="integer"
            android:defaultValue="1"
            />
        <action
            android:id="@+id/comments_to_posts"
            app:destination="@id/fragment_post"
            app:launchSingleTop="false"
            app:popUpTo="@+id/fragment_post"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/fragment_images"
        android:name="com.example.ing_app.ui.images.ImageFragment"
        android:label="fragment_images"
        tools:layout="@layout/fragment_images">
        <argument
            android:name="userId"
            app:argType="integer"
            android:defaultValue="1"
            />
        <action
            android:id="@+id/images_to_images_fullsize"
            app:destination="@id/fragment_images_fullsize" />
    </fragment>

    <fragment
        android:id="@+id/fragment_images_fullsize"
        android:name="com.example.ing_app.ui.images.ImageFullsizeFragment"
        android:label="fragment_images_fullsize"
        tools:layout="@layout/fragment_images_fullsize">
    </fragment>
    <fragment
        android:id="@+id/fragment_connection_error"
        android:name="com.example.ing_app.common.fragment_connection_error"
        android:label="fragment_connection_error"
        tools:layout="@layout/fragment_connection_error" />

</navigation>